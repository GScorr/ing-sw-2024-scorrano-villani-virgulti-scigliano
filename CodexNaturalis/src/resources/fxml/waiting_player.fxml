<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.VIEW.GuiPackage.CONTROLLER.WaitingSceneController">
    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitHeight="800.0" fitWidth="600.0" preserveRatio="false" />

    <!-- Main VBox for content -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(0, 0, 0, 0.5); -fx-padding: 20;">
        <Label alignment="CENTER" prefHeight="47.0" prefWidth="247.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Waiting for Players...">
         <font>
            <Font size="16.0" />
         </font></Label>
        <ProgressIndicator fx:id="progressIndicator" prefHeight="80" prefWidth="80" />
        <Label fx:id="waitingMessage" alignment="CENTER" prefHeight="42.0" prefWidth="322.0" style="-fx-text-fill: white; -fx-font-size: 14px;" text="Currently waiting for other players to join..." wrapText="true">
         <font>
            <Font size="14.0" />
         </font></Label>
    </VBox>
</StackPane>
