<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="160.0" prefWidth="324.0" spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.VIEW.GuiPackage.CONTROLLER.AlertSceneController">
    <Label fx:id="alertTitle" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Alert Title" />
    <Label fx:id="alertMessage" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" text="Alert message goes here" wrapText="true" />
    <Button onAction="#handleOkAction" prefHeight="34.0" prefWidth="47.0" style="-fx-font-size: 14px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="OK">
      <effect>
         <Blend />
      </effect></Button>
</VBox>
