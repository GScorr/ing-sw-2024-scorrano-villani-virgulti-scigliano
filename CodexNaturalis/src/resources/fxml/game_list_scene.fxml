<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.VIEW.GuiPackage.CONTROLLER.GameListController" style="-fx-background-color: black;">
    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitHeight="800.0" fitWidth="600.0" preserveRatio="false" />

    <!-- Main VBox for content -->
    <VBox spacing="10" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.5); -fx-padding: 20;">
        <Label text="Free Games" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" />
        <VBox fx:id="gameListContainer" spacing="10" alignment="CENTER"/>
    </VBox>
</StackPane>
