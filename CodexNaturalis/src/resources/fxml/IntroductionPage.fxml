<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="it.polimi.ingsw.VIEW.GuiPackage.CONTROLLER.IntroductionController">
   <!-- Background Image -->
   <ImageView fx:id="backgroundImage" preserveRatio="false" />

   <!-- Text Label -->
   <Label fx:id="titleLabel" text="CODEX NATURALIS" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>

   <!-- Loading Bar Container -->
   <AnchorPane>
      <ProgressBar fx:id="loadingBar" prefWidth="800.0" layoutX="300.0" layoutY="500.0" />
   </AnchorPane>
</StackPane>
