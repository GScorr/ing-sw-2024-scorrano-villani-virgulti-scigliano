<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="750.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.VIEW.GuiPackage.CONTROLLER.GameWait">

    <!-- Menu at the top -->
    <top>
        <fx:include fx:id="HeaderInclude" source="./header.fxml" />
    </top>

    <!-- New central menu -->
    <center>
        <VBox alignment="CENTER" spacing="20" prefHeight="450.0">
            <Button text="Visualizza campo da gioco avversari" onAction="#handleViewOpponentFields"/>
            <Button text="Visualizza Deck" onAction="#handleViewDeck"/>
        </VBox>
    </center>

    <!-- VBox for the decks at the right -->
    <right>
    </right>

    <!-- VBox for the decks at the right -->
    <left>
        <VBox fx:id="handBox" alignment="CENTER" maxWidth="500.0" spacing="10">
            <Label text="Cards in HAND:" />
            <Label text="Carta 1:" />
            <ImageView fx:id="handCard1" fitHeight="133" fitWidth="100" preserveRatio="true" onMouseClicked="#handleCard1Click"  onMousePressed="#handleCard1Pressed" onMouseReleased="#handleCard1Released"/>
            <Label text="Carta 2:" />
            <ImageView fx:id="handCard2" fitHeight="133" fitWidth="100" preserveRatio="true" onMouseClicked="#handleCard2Click"  onMousePressed="#handleCard2Pressed" onMouseReleased="#handleCard2Released"/>
            <Label text="Carta 3:" />
            <ImageView fx:id="handCard3" fitHeight="133" fitWidth="100" preserveRatio="true" onMouseClicked="#handleCard3Click"  onMousePressed="#handleCard3Pressed" onMouseReleased="#handleCard3Released"/>
        </VBox>
    </left>

</BorderPane>
