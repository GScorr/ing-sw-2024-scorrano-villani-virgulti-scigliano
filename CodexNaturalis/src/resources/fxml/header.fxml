<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="it.polimi.ingsw.VIEW.GuiPackage.CONTROLLER.HeaderController">

        <MenuBar fx:id="menuBar" >
            <Menu text="Disconnect">
                <MenuItem text="Disconnect from this Game" onAction="#handleDisconnect" />
            </Menu>
            <Menu text="View GAME FIELDS">
                <MenuItem text="View" onAction="#handleViewOpponentFields" />
            </Menu>
            <Menu fx:id="chatsMenu" text="Chats">
            </Menu>
            <Menu text="Scoreboard">
                <MenuItem fx:id="scoreboardView" text="View" onAction="#showScoreboard" />
            </Menu>

        </MenuBar>

</AnchorPane>
