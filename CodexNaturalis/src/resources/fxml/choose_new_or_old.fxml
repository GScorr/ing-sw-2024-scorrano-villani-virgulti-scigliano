<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.VIEW.GuiPackage.CONTROLLER.ChooseNewOrOldController">

    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitHeight="800.0" fitWidth="600.0" preserveRatio="false" />

    <!-- VBox for content -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(0, 0, 0, 0.5); -fx-padding: 20;">
        <Label alignment="CENTER" prefHeight="39.0" prefWidth="543.0" style="-fx-text-fill: white; -fx-font-size: 18px;" text="Would you like to create a new game or join an existing game?" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font></Label>
        <Button onAction="#handleCreateNewGame" style="-fx-font-size: 16px; -fx-padding: 10px 20px;" text="Create New Game" />
        <Button onAction="#handleJoinExistingGame" style="-fx-font-size: 16px; -fx-padding: 10px 20px;" text="Join Existing Game" />
    </VBox>
</StackPane>
