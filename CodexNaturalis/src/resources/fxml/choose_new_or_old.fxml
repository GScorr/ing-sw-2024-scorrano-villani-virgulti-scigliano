<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.VIEW.GuiPackage.CONTROLLER.ChooseNewOrOldController" spacing="20" alignment="CENTER" styleClass="choose-new-or-old">
    <!-- Background Image -->
    <fx:include fx:id="BackGroundImage" source="./BackGroundImagine.fxml" />

    <Label text="Would you like to create a new game or join an existing game?" styleClass="question" />
    <Button text="Create New Game" onAction="#handleCreateNewGame" styleClass="action-button" />
    <Button text="Join Existing Game" onAction="#handleJoinExistingGame" styleClass="action-button" />
</VBox>
